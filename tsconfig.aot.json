{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "./src/frontend",
    "outDir": "./compiled",
    "paths": {
        "root/*": ["app/root/*"],
        "shared/*": ["app/shared/*"],
        "common/*": ["app/shared/*"]
    }
  },

  "files": [
    "src/frontend/app/bootstrap.ts",
    "src/frontend/app/custom_typings.d.ts"
  ],

   "angularCompilerOptions": {
    "genDir": "./compiled",
    "skipMetadataEmit" : true
    },
 "exclude": [
    "node_modules"
  ]
}




